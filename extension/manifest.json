{
  "name": "Carrefour Proactive Shopping Assistant",
  "version": "0.1.0",
  "manifest_version": 3,
  "action": {
    "default_title": "Carrefour Assistant",
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": [
    "https://www.carrefour.fr/*",
    "http://localhost:8000/*"
  ],
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.carrefour.fr/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}