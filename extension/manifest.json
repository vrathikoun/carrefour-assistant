{
  "name": "Carrefour Proactive Shopping Assistant",
  "version": "0.1.0",
  "manifest_version": 3,
  "action": {
    "default_title": "Carrefour Assistant",
    "default_popup": "src/popup.html"
  },
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": [
    "https://www.carrefour.fr//*",
    "https://carrefour-assistant-api-62829646645.europe-west1.run.app/*"
  ],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/idee.png",
    "48": "icons/robot.png",
    "128": "icons/directeur.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.carrefour.fr/*"],
      "js": ["src/content.js"],
      "run_at": "document_idle"
    }
  ]
}